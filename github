def RIP_update(table, vecteur_voisin, ip_voisin, interface_voisin):
    for x in vecteur_voisin:
        if vecteur_voisin[x]+1 >15:
            continue
        
        if not x in table:
            table[x] = (ip_voisin, interface_voisin, vecteur_voisin[x]+1)
        else:
            if table[x][0] == ip_voisin:
                table[x] = (*table[x][0:2], vecteur_voisin[x]+1)
